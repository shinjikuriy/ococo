<%= content_tag :div, class: 'nested-fields', data: { new_record: form.object.new_record? } do %>
  <div class="form-group">
    <div class="field name">
      <%= form.label :name %>
      <%= form.text_field :name %>
    </div>
    <div class="field quantity">
      <%= form.label :quantity %>
      <%= form.text_field :quantity %>
    </div>
    <div class="actions delete-association">
      <%= link_to '#', data: { action: 'click->nested-form#remove_association' },
                       title: t('pickles.shared.delete'), class: "button-delete-association" do %>
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-circle-fill" viewBox="0 0 16 16">
          <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM5.354 4.646a.5.5 0 1 0-.708.708L7.293 8l-2.647 2.646a.5.5 0 0 0 .708.708L8 8.707l2.646 2.647a.5.5 0 0 0 .708-.708L8.707 8l2.647-2.646a.5.5 0 0 0-.708-.708L8 7.293 5.354 4.646z"/>
        </svg>
      <% end %>
    </div>
  </div>

  <%= form.hidden_field :_destroy %>
<% end %>
