<div class="row-home-main-frame">
  <% unless user_signed_in? %>
    <div class="col-registration-banner-pane registration-banner-background">
      <ul class="list-inline display-1">
        <li class="list-inline-item">ü•¨</li>
        <li class="list-inline-item">üßÇ</li>
        <li class="list-inline-item">ü´ô</li>
        <li class="list-inline-item">üìù</li>
      </ul>
      <p><%= t('.description') %></p>
      <div class="links-to-enter">
        <div class="registration-button">
          <%= link_to t('.registration'), new_user_registration_path, class: 'btn btn-success text-nowrap' %>
        </div>
        <div class="mx-2"><%= t('.or') %></div>
        <div class="sign-in-button">
          <%= link_to t('users.shared.links.sign_in'), new_user_session_path, class: 'btn btn-primary text-nowrap' %>
        </div>
      </div>
    </div>
  <% end %>

  <div class="col-pickle-pane">
    <div class="pickle-section">
      <h2><%= t('.recent_pickles') %></h2>

      <% if @pickles.empty? %>
        <div class="no-pickles-yet" id="no-pickles-yet">
          <%= t('pickles.shared.no_pickles_yet') %>
        </div>
      <% else %>
        <%= render @pickles %>
      <% end %>

      <% if user_signed_in? %>
        <div class="link-to-pickles">
          <%= link_to t('.link_to_pickles'), pickles_path  %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="col-journal-pane">
    <div class="journal-section">
      <h2><%= t('.recent_journals') %></h2>

      <% if @journals.empty? %>
        <div class="no-journals-yet" id="no-journals-yet">
          <%= t('journals.shared.no_journals_yet') %>
        </div>
      <% else %>
        <%= render @journals %>
      <% end %>

      <% if user_signed_in? %>
        <div class="link-to-journals">
          <%= link_to t('.link_to_journals'), journals_path %>
        </div>
      <% end %>
    </div>
  </div>
</div>
