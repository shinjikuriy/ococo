<%= turbo_stream.update 'journal-list' do %>
  <%= render @journals %>
<% end %>

<%= turbo_stream.update 'journal-pagination' do %>
  <%= paginate @journals %>
<% end %>

<% if @journals.empty? %>
  <%= turbo_stream.before 'journal-list' do %>
    <%= content_tag 'div', t('journals.shared.no_journals_yet'), id: 'no-journals-yet', class: 'no-journals-yet' %>
  <% end %>
<% end %>

<%= turbo_stream.update 'flash', partial: 'flash' %>
