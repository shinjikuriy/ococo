<header>
  <nav class="navbar bg-dark navbar-fixed-top" data-bs-theme="dark">
    <div class="container container-fluid">

      <div class="navbar-brand">
        <%= link_to "ococo" , root_path %>
      </div>

      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li class="nav-item"><%= link_to t('sign_out', scope: 'users.sessions.destroy') , destroy_user_session_path, id: 'sign-out-link', data: { "turbo-method": :delete } %></li>
        <% else %>
          <li class="nav-item"><%= link_to t('sign_in', scope: 'users.sessions.new') , new_user_session_path %></li>
          <li class="nav-item"><%= link_to t('sign_up', scope: 'users.registrations.new') , new_user_registration_path %></li>
        <% end %>
      </ul>

    </div>
  </nav>
</header>